    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Solution",
            "program": "${workspaceFolder}${/}Headless${/}bin${/}Debug${/}net8.0${/}Headless.dll",
            //"args": ["-m", "Debug", "-l", "CSharp", "-i", "stream", "-t", "asdf"], // stable c#  script runner
            "args": ["-m", "Debug", "-l", "CSharp-new", "-i", "stream", "-t", "asdf", "--cs-impl-scheme", "Method"], // new c# script runner (in development)
            "cwd": "${workspaceFolder}${/}Headless",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Re-Launch (Don't Compile)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}${/}Headless${/}bin${/}Debug${/}net8.0${/}Headless.dll",
            "args": ["-m", "Debug", "-l", "CSharp", "-i", "stream", "-t", "asdf"],
            "cwd": "${workspaceFolder}${/}Headless",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}